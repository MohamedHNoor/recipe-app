<h1>New Food</h1>
<%= form_with model: @food, url: user_foods_path do |f| %>
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control mb-3" %>

  <%= f.label :measurement_unit, class: "form-label" %>
  <%= f.text_field :measurement_unit, class: "form-control mb-3" %>

  <%= f.label :price, class: "form-label" %>
  <%= f.text_field :price, class: "form-control mb-3" %>

  <%= f.label :quantity, class: "form-label" %>
  <%= f.number_field :quantity, class: "form-control mb-3" %>

  <%= f.submit "Create Food", class: "btn btn-outline-secondary" %>
<% end %>

