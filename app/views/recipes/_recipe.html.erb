<div class="container mb-3">
  <div class="row border border-dark border-2 p-2">
    <div class="d-flex flex-column col-4">
      <h3>
        <%= link_to recipe_path(recipe), class: "text-decoration-none text-dark" do %>
          <%= recipe.name%>
        <% end %>
      </h3>
      <%= button_to "Remove", recipe, class: "btn btn-link m-0 p-0", method: :delete %>
    </div>
    <div class="d-flex col-8 align-items-center">
      <p>
        <strong>Description:</strong>
        <%= recipe.description %>
      </p>
    </div>
  </div>
</div>